{
  "name": "nrf vscode",
  
  "image": "ghcr.io/tigitlabs/nrf-codespace:latest", 

  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": { "version": "latest"}
  },

  "remoteUser": "vscode",

  "mounts": [
    "type=bind,source=/home/${localEnv:USER}/.ssh,target=/home/vscode/.ssh,readonly"
  ]

}
